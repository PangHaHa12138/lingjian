<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_window_focused="false"
        >
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#0beabe"/>
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#e0f4ff"/>
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="20dp"
                android:right="20dp"/>
        </shape>
    </item>

</selector>