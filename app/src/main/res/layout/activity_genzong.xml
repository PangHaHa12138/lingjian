<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_bg3x">

    <include layout="@layout/activity_base_toobar"/>


        <RelativeLayout
            android:id="@+id/heng"
            android:background="@color/genzobg"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/icongenzong"
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_shenpijilu"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/icongenzong"
                android:text="@string/genzongtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/shenhejilulistview"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </RelativeLayout>



</LinearLayout>